<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:backgroundTint="@color/cream"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tableNumberTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:paddingVertical="24dp"
        android:paddingLeft="16dp"
        android:text="Table number: "
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tableNumberTextView"
        tools:layout_editor_absoluteX="0dp">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/cream"
            android:orientation="vertical"
            android:padding="16dp">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Main Dishes"
                android:textSize="20sp" />

            <ListView
                android:id="@+id/listViewMainDishes"
                android:layout_width="wrap_content"
                android:layout_height="106dp"
                android:orientation="vertical" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Sides"
                android:textSize="20sp" />

            <ListView
                android:id="@+id/listViewSides"
                android:layout_width="wrap_content"
                android:layout_height="79dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Starters"
                android:textSize="20sp" />

            <ListView
                android:id="@+id/listViewStarters"
                android:layout_width="wrap_content"
                android:layout_height="155dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Rice"
                android:textSize="20sp" />

            <ListView
                android:id="@+id/listViewRice"
                android:layout_width="wrap_content"
                android:layout_height="88dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Bread"
                android:textSize="20sp" />

            <ListView
                android:id="@+id/listViewBread"
                android:layout_width="wrap_content"
                android:layout_height="106dp" />
        </LinearLayout>
    </ScrollView>


    <Button
        android:id="@+id/viewSummaryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Summary"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:elevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>
